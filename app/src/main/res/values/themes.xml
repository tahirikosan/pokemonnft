<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokemonNFT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/componentColor</item>
        <item name="colorSecondaryVariant">@color/componentColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="PokemonStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/pokemon</item>
        <item name="android:textColor">@color/componentColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="NormalTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ItalicTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_regular_italic</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TitleStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TitleSecondaryStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_bold</item>
        <item name="android:textColor">@color/componentColor</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SubTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AttributeTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AttributeTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_bold</item>
        <item name="android:textColor">@color/componentColor</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="FilterTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_bold</item>
        <item name="android:textColor">@color/componentColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_bold</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:backgroundTint">@color/componentColor</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/componentColor</item>
        <item name="android:backgroundTint">@color/componentColor</item>
        <item name="android:textColorHint">@color/componentColor</item>
        <item name="android:lines">1</item>
    </style>
</resources>