<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">

    <include
        android:id="@+id/enemyCard"
        layout="@layout/item_pokemon_card"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_enemy_health"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:progress="100"
        android:max="100"
        android:progressTint="@color/red"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/enemyCard"
        app:layout_constraintTop_toBottomOf="@id/enemyCard"
        app:layout_constraintEnd_toEndOf="@id/enemyCard"/>

    <include
        android:id="@+id/myPokemonView"
        layout="@layout/item_pokemon_card"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ProgressBar
        android:id="@+id/progress_my_health"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:progress="100"
        android:max="100"
        android:progressTint="@color/green"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/myPokemonView"
        app:layout_constraintTop_toBottomOf="@id/myPokemonView"
        app:layout_constraintEnd_toEndOf="@id/myPokemonView"/>

    <Button
        android:id="@+id/attackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:enabled="false"
        android:alpha="0.5"
        style="@style/DefaultButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>